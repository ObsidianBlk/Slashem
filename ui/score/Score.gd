extends MarginContainer


# ------------------------------------------------------------------------------
# Variables
# ------------------------------------------------------------------------------
var _score : int = 0

# ------------------------------------------------------------------------------
# Onready Variables
# ------------------------------------------------------------------------------
@onready var _score_label : Label = $HBoxContainer/Value


# ------------------------------------------------------------------------------
# Public Methods
# ------------------------------------------------------------------------------
func add_score(amount : int = 1) -> void:
	_score += amount
	_score_label.text = "%s"%[_score]
